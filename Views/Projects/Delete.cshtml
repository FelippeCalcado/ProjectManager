@model ProjectManager.Models.Project

@{
	ViewData["Title"] = "Delete";
	ViewData["Subject"] = Model.ProjectName;
}



<div class="subject-data" id="field-data">

	<h1>
		Field - @ViewData["Subject"]
	</h1>

	<table class="table-data" id="table-data-field">

		<tr class="table-row">
			<th class="data-name">
				Project ID:
			</th>

			<td class="data">
				@Model.ProjectID
			</td>

		</tr>

		<tr>

			<th class="data-name">
				Jobs:
			</th>

			<td class="data">
				@Model.Jobs.Count()
			</td>

		</tr>

	</table>

</div>



<hr class="h-line" />

<!-- Sub options Area -->
<section class="sub-options" id="field-OpArea">

	<article class="sub-itemOp-area" id="sub-itemOp-area-1"
			 type="button"
			 onclick="location.href='@Url.Action("Details", "Fields")/@Model?.FieldID'">

		<p class="sub-itemOp" id="subject-new-1">Field Details</p>

	</article>

</section>

<hr class="h-line" />

<div class="warning">

	<h3>Deleting this Project will eliminate all it's @Model.Jobs.Count() related projects. Are you sure you want to delete this?</h3>

</div>


<hr class="h-line" />


<div class="form-container">

	<form asp-action="Delete" class="grid-container">

		<input type="hidden" asp-for="ProjectID" />

		<div class="button-cell">
			<div class="center-cell">

				<input type="submit" value="Delete" class="button-text" id="delete-button" />

			</div>
		</div>
	</form>
</div>
